<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseWhiteAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/window_bg_png</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="TabItemStyle" parent="BaseMainTextStyle">
        <item name="android:paddingLeft">@dimen/base_hdpi</item>
        <item name="android:paddingRight">@dimen/base_hdpi</item>
        <item name="android:layout_marginLeft">@dimen/base_hdpi</item>
        <item name="android:layout_marginRight">@dimen/base_hdpi</item>
        <item name="r_draw_text_gravity">CENTER</item>
        <item name="r_draw_text_color">@color/base_text_color</item>
    </style>

    <style name="TabDrawItemStyle" parent="TabItemStyle">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="r_draw_text_gravity">CENTER</item>
        <item name="r_draw_text_size">@dimen/default_text_size16</item>
        <item name="r_draw_text_color">@color/base_text_color</item>
    </style>

    <style name="DslTabItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TabSlidingItemStyle" parent="DslTabItemStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="TabCommonItemStyle" parent="DslTabItemStyle">
        <item name="android:padding">4dp</item>
    </style>

    <style name="DslButtonStyle" parent="BaseMainTextStyle">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="button_gradient_end_color">@color/theme_color_primary_dark</item>
        <item name="button_gradient_start_color">@color/theme_color_accent</item>
        <item name="button_radius">3dp</item>
    </style>
</resources>
