<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.angcyo.uiview.less.widget.Button
            android:id="@+id/take_picture_confirm"
            android:text="拍照 (带确认)"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/base_xhdpi"
            android:layout_marginTop="@dimen/base_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.angcyo.uiview.less.widget.Button
            android:id="@+id/take_picture_no_confirm"
            android:text="拍照 (无确认)"
            app:layout_constraintTop_toTopOf="@id/take_picture_confirm"
            app:layout_constraintLeft_toRightOf="@id/take_picture_confirm"
            android:layout_marginLeft="@dimen/base_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.angcyo.uiview.less.widget.Button
            android:id="@+id/id_card_scan"
            android:text="身份证号识别"
            app:layout_constraintTop_toTopOf="@id/take_picture_no_confirm"
            app:layout_constraintLeft_toRightOf="@id/take_picture_no_confirm"
            android:layout_marginLeft="@dimen/base_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text_view"
            app:layout_constraintBottom_toTopOf="@id/image_view"
            app:layout_constraintLeft_toLeftOf="@id/image_view"
            android:layout_marginBottom="@dimen/base_line"
            android:background="@color/transparent_dark20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.angcyo.uiview.less.widget.GlideImageView
            android:id="@+id/image_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent_dark20"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

    <com.angcyo.uiview.less.widget.GlideImageView
            android:id="@+id/image_view2"
            app:layout_constraintLeft_toRightOf="@id/image_view"
            app:layout_constraintBottom_toBottomOf="@id/image_view"
            android:layout_marginLeft="@dimen/base_xhdpi"
            android:background="@color/transparent_dark20"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
</android.support.constraint.ConstraintLayout>