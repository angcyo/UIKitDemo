<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/base_white">

    <FrameLayout
        android:id="@+id/emoji_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/transparent_dark20">

        <include layout="@layout/emoji_layout" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/base_red_tran"
        app:layout_anchor="@id/emoji_layout"
        app:layout_anchorGravity="left">

        <include layout="@layout/emoji_layout" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/base_red_tran"
        app:layout_anchor="@id/emoji_layout"
        app:layout_anchorGravity="right">

        <include layout="@layout/emoji_layout" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/base_red_tran"
        app:layout_anchor="@id/emoji_layout"
        app:layout_anchorGravity="left|bottom">

        <include layout="@layout/emoji_layout" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:layout_insetEdge="bottom"
        app:layout_dodgeInsetEdges="right"
        android:background="@color/base_red_tran"
        app:layout_anchor="@id/emoji_layout"
        app:layout_anchorGravity="right|bottom">

        <include layout="@layout/emoji_layout" />

    </FrameLayout>

