<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:background="@color/transparent_dark40"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/base_xxhdpi"
            android:elevation="@dimen/base_elevation"
            android:paddingLeft="@dimen/base_xxhdpi"
            android:paddingRight="@dimen/base_xxhdpi"
            android:background="@drawable/base_white_circle_shape">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_view"
                android:layout_width="64dp"
                android:layout_height="64dp"/>

        <TextView
                android:id="@+id/text_view"
                style="@style/BaseMainTextStyle"
                android:text="权限权限权限权限权限权限权限"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/image_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>