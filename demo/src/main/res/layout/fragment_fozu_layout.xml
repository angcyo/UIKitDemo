<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.angcyo.uikitdemo.ui.widget.group.FozuLayout
            android:background="@color/transparent_dark20"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="40dp"
                android:background="@color/color_orange"/>

        <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_margin="40dp"
                android:layout_height="200dp"
                android:background="@color/base_red"/>

        <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_margin="40dp"
                android:layout_height="200dp"
                android:background="@color/base_link_color_dark"/>
    </com.angcyo.uikitdemo.ui.widget.group.FozuLayout>

    <com.angcyo.uikitdemo.ui.widget.group.FozuLayout2
            android:background="@color/transparent_dark20"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_margin="40dp"
                android:layout_height="200dp"
                android:background="@color/base_red"/>

        <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_margin="40dp"
                android:layout_height="200dp"
                android:background="@color/base_link_color_dark"/>
    </com.angcyo.uikitdemo.ui.widget.group.FozuLayout2>
</LinearLayout>